<BorderPane prefHeight="536.0" prefWidth="781.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewController.HomeViewController">
   <top>
      <HBox alignment="CENTER" style="-fx-background-color: #aaaaaa; -fx-effect: dropshadow(one-pass-box, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0);" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="txtUser" text="Bienvenue, Nada">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label fx:id="txtDate" text="Jeudi, 24 Novembre 2022">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <Label fx:id="txtSolde" text="5000 TND">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label text="Dernières transactions :">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <ListView prefHeight="200.0" prefWidth="200.0" />
                  <ComboBox fx:id="choixTransac" promptText="Ajouter une transaction" />
               </children>
            </VBox>
            <Region prefHeight="200.0" prefWidth="200.0" />
            <VBox alignment="CENTER_LEFT" layoutX="291.0" layoutY="10.0" spacing="8.0">
               <children>
                  <Label text="Statistiques :">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <LineChart prefHeight="218.0" prefWidth="288.0">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </LineChart>
                  <ComboBox fx:id="choixBudg" promptText="Créer un budget" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
