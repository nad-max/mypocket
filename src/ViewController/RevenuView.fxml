<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="window" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewController.RevenuViewController">
   <children>
      <Label text="Revenu">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Label>
      <HBox alignment="CENTER" spacing="4.0">
         <children>
            <Label text="Montant : " />
            <TextField fx:id="txtMontant" promptText="Montant" style="-fx-border-color: #22dd44;" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" spacing="4.0">
         <children>
            <Label text="Source :" />
            <ComboBox fx:id="srcChoice" prefWidth="150.0" promptText="Source du revenu" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" spacing="4.0">
         <children>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#retour" text="Retour" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnValider" mnemonicParsing="false" onAction="#valider" text="Valider" />
         </children>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
