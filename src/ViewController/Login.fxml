<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="371.0" prefWidth="270.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewController.LoginController">
   <children>
      <Label text="Sign in to myPocket">
         <font>
            <Font name="Tahoma Bold" size="16.0" />
         </font>
      </Label>
      <Label text="Nom d'utilisateur">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets left="-140.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtUser" promptText="User Name" />
      <Label text="Mot de passe">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets left="-170.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="txtPW" promptText="password" />
      <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#login" prefHeight="26.0" prefWidth="306.0" text="Sign in" />
      <Hyperlink fx:id="passOublie" text="Mot de passe oublié ?" />
      <Hyperlink fx:id="nvComte" onAction="#nvCompte" text="Créer un nouveau compte" />
   </children>
   <opaqueInsets>
      <Insets left="15.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
